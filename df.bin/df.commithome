#!/usr/bin/env bash

cd "$(dirname "${BASH_SOURCE[0]}")"

HOMEDIR="$(realpath ~)"
REPODIR="$(realpath ~/dotfiles)"

git --git-dir=$REPODIR/.git --work-tree=$HOMEDIR add -A
git --git-dir=$REPODIR/.git --work-tree=$HOMEDIR commit --no-verify -m automated
git --git-dir=$REPODIR/.git --work-tree=$HOMEDIR push